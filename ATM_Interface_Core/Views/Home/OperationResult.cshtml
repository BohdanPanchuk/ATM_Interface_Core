@model ATM_Interface_Core.Models.OperationResultViewModel

@{
    ViewData["Title"] = "Operation Result";
}

<div>
    <h3>Operation Result</h3>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CardNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WithdrawnMoney)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WithdrawnMoney)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableMoney)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableMoney)
        </dd>
    </dl>

    <a asp-action="Operations">Back to operations</a> |
    <a asp-action="CardNumber">Exit</a>
</div>
